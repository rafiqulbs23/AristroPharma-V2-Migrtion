<?xml version="1.0" encoding="utf-8"?>
<!--sweep rotation gradient-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/blue_grey_100" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="66"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="0">
            <shape>
                <gradient
                    android:centerColor="@android:color/transparent"
                    android:centerX="0.3"
                    android:centerY="0.5"
                    android:endColor="@android:color/transparent"
                    android:startColor="@color/blue_grey_50"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="290"
            android:pivotX="30%"
            android:pivotY="40%"
            android:toDegrees="0">
            <shape>
                <gradient
                    android:centerColor="@android:color/transparent"
                    android:centerX="0.8"
                    android:centerY="0.3"
                    android:endColor="@android:color/transparent"
                    android:startColor="@color/blue_grey_300"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="280"
            android:pivotX="30%"
            android:pivotY="50%"
            android:toDegrees="0">
            <shape>
                <gradient
                    android:centerColor="@android:color/transparent"
                    android:centerX="0.6"
                    android:centerY="0.7"
                    android:endColor="@android:color/transparent"
                    android:startColor="@color/blue_100"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="0"
            android:pivotX="30%"
            android:pivotY="50%"
            android:toDegrees="0">
            <shape>
                <gradient
                    android:centerColor="@android:color/transparent"
                    android:centerX="0.0"
                    android:centerY="0.0"
                    android:endColor="@android:color/transparent"
                    android:startColor="@color/bg_standard_white"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>